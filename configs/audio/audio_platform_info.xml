        <device name="SND_DEVICE_IN_HEADSET_MIC" alias="headset-mic" />

        <!-- used for voip headset -->
        <device name="SND_DEVICE_IN_HEADSET_MIC_FLUENCE" alias="headset-mic" />

        <!-- used for call headset -->
        <device name="SND_DEVICE_IN_VOICE_HEADSET_MIC" alias="headset-mic" />

