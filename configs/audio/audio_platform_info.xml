        <device name="SND_DEVICE_OUT_HANDSET" alias="handset" />
        <device name="SND_DEVICE_OUT_SPEAKER" alias="speaker" />
        <device name="SND_DEVICE_OUT_HEADPHONES" alias="headphones" />
