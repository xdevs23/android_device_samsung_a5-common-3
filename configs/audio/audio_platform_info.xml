        <device name="SND_DEVICE_OUT_VOICE_HANDSET" alias="voice-handset" />
        <device name="SND_DEVICE_OUT_VOICE_SPEAKER" alias="voice-speaker" />
        <device name="SND_DEVICE_OUT_VOICE_HEADPHONES" alias="voice-headphones" />

        <!-- input devices -->
        <!-- used for input handset -->
        <device name="SND_DEVICE_IN_HANDSET_MIC" alias="handset-mic" />
        <device name="SND_DEVICE_IN_HANDSET_DMIC" alias="handset-mic" />
        <device name="SND_DEVICE_IN_HANDSET_STEREO_DMIC" alias="handset-mic" />

        <!-- used for voip handset -->
        <device name="SND_DEVICE_IN_HANDSET_MIC_AEC" alias="handset-mic" />
        <device name="SND_DEVICE_IN_HANDSET_MIC_NS" alias="handset-mic" />
        <device name="SND_DEVICE_IN_HANDSET_MIC_AEC_NS" alias="handset-mic" />
