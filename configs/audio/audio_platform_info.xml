        <device name="SND_DEVICE_IN_VOICE_REC_MIC" alias="handset-mic" />
        <device name="SND_DEVICE_IN_VOICE_REC_MIC_NS" alias="handset-mic" />
        <device name="SND_DEVICE_IN_VOICE_REC_DMIC_STEREO" alias="handset-mic" />
        <device name="SND_DEVICE_IN_VOICE_REC_DMIC_FLUENCE" alias="handset-mic" />
    </device_names>
</audio_platform_info>
