        <device name="SND_DEVICE_IN_SPEAKER_STEREO_DMIC" alias="speaker-mic" />

        <!-- used for voip speaker -->
        <device name="SND_DEVICE_IN_SPEAKER_MIC_AEC" alias="speaker-mic" />
        <device name="SND_DEVICE_IN_SPEAKER_MIC_NS" alias="speaker-mic" />
        <device name="SND_DEVICE_IN_SPEAKER_MIC_AEC_NS" alias="speaker-mic" />
